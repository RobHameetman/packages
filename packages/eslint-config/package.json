{
	"name": "@rob.hameetman/eslint-config",
	"version": "0.0.3",
	"description": "Eslint config for `@rob.hameetman` packages",
	"author": "Robert Hameetman <rob@rham.io>",
	"license": "MIT",
	"homepage": "https://github.com/RobHameetman/packages#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/RobHameetman/packages.git"
	},
	"bugs": {
		"url": "https://github.com/RobHameetman/packages/issues"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"typings": "./dist/index.d.ts",
	"bin": {},
	"directories": {
		"lib": "src",
		"test": "__tests__"
	},
	"files": [
		"./dist",
		"./index.js"
	],
	"scripts": {
		"build": "NODE_ENV=production rm -rf ./dist && tsc -P tsconfig.json",
		"dev": "NODE_ENV=development ts-node -P ./tsconfig.module.json ./src/cli.ts",
		"lint": "eslint ./src/* --ext=ts --fix",
		"prod": "NODE_ENV=production node ./dist/main/cli.js",
		"test": "NODE_ENV=testing jest -co --watch --notify --runInBand --detectOpenHandles"
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^2.27.0",
		"@typescript-eslint/parser": "^2.27.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jest": "^23.8.2",
		"eslint-plugin-prettier": "^3.1.2",
		"prettier": "^2.0.4"
	},
	"devDependencies": {
		"@types/eslint": "^6.1.9",
		"@types/jest": "^25.2.1",
		"@types/node": "^13.11.0",
		"husky": "^4.2.3",
		"jest": "^25.3.0",
		"ts-jest": "^25.3.1",
		"ts-node": "^8.8.2",
		"typescript": "^3.8.3"
	},
	"eslintConfig": {
		"extends": [
			"./index.js"
		],
		"rules": {
			"import/export": "off",
			"sort-imports": "off",
			"sort-keys": "off"
		}
	},
	"eslintIgnore": [
		"dist"
	],
	"prettier": {
		"semi": true,
		"trailingComma": "all",
		"singleQuote": true,
		"printWidth": 80,
		"tabWidth": 2
	},
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"testMatch": [
			"**/__tests__/**/*.ts",
			"**/?*.spec.ts"
		],
		"transform": {
			"^.+\\.ts$": "ts-jest"
		}
	},
	"husky": {
		"hooks": {
			"pre-publish": "npm run build"
		}
	}
}
