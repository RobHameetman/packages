{
  "extends": "./tsconfig",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
  },
  "include": [
    "lib/**/*",
    "typings/*.d.ts",
  ],
  "exclude": [
    "dist",
    "node_modules",
  ]
}
