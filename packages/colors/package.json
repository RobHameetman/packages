{
	"name": "@rob.hameetman/colors",
	"version": "0.0.0",
	"description": "Branding-compliant color scale enums for `@rob.hameetman` packages",
	"author": "Robert Hameetman <rob@rham.io>",
	"homepage": "https://robhameetman.com",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/RobHameetman/packages.git"
	},
	"bugs": {
		"url": "https://github.com/RobHameetman/packages/issues"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"typings": "./dist/index.d.ts",
	"bin": {},
	"directories": {
		"lib": "src",
		"test": "__tests__"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "NODE_ENV=production tsc -P tsconfig.json && tsc -P tsconfig.module.json",
		"dev": "NODE_ENV=development tsc -P tsconfig.module.json --watch",
		"lint": "eslint ./src/* --ext=ts --fix",
		"prod": "NODE_ENV=production node ./dist/main/cli.js",
		"test": "NODE_ENV=testing jest -co --watch --notify"
	},
	"dependencies": {},
	"devDependencies": {
		"@rob.hameetman/eslint-config": "0.0.2",
		"@types/jest": "^25.2.1",
		"@types/node": "^13.11.0",
		"husky": "^4.2.3",
		"ts-jest": "^25.3.1",
		"ts-node": "^8.8.2",
		"typescript": "^3.8.3"
	},
	"eslintConfig": {
		"extends": [
			"@rob.hameetman/eslint-config"
		]
	},
	"prettier": {
		"semi": true,
		"trailingComma": "all",
		"singleQuote": true,
		"printWidth": 100,
		"tabWidth": 2
	},
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"testMatch": [
			"**/__tests__/**/*.ts",
			"**/?*.spec.ts"
		],
		"transform": {
			"^.+\\.ts$": "ts-jest"
		}
	},
	"husky": {
		"hooks": {
			"pre-publish": "npm run build"
		}
	}
}
